<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"

        tools:background="@drawable/image"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="189dp">


        <Button
            android:id="@+id/captureImagesBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="276dp"
            android:onClick="openGalerry"
            android:text="Open Gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/captureImagesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="137dp"
            android:onClick="launchCamera"
            android:text="Open Camera"
            app:layout_constraintEnd_toEndOf="@+id/captureImagesBtn2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="40dp"
            android:background="#A81C1C"
            android:text="Logout"
            app:layout_constraintBottom_toTopOf="@+id/captureImagesBtn"
            app:layout_constraintStart_toEndOf="@+id/captureImagesBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>