<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gints.Result.ResultActivity">

    <TextView
        android:id="@+id/Valsts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Valsts"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tips"
        app:layout_constraintStart_toStartOf="@+id/tips2"
        app:layout_constraintTop_toBottomOf="@+id/Valsts" />

    <TextView
        android:id="@+id/tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="25dp"
        android:text="Apraksts"
        app:layout_constraintEnd_toStartOf="@+id/textViewApraksts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tips" />

    <ImageView
        android:id="@+id/imageViewOrginal"
        android:layout_width="325dp"
        android:layout_height="324dp"

        android:layout_alignParentTop="false"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="63dp"
        android:minWidth="300dp"
        android:minHeight="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textViewNosaukums"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <TextView
        android:id="@+id/textViewNosaukums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="40dp"
        android:text="Nosaukums"
        app:layout_constraintBottom_toTopOf="@+id/textViewTips"
        app:layout_constraintStart_toStartOf="@+id/imageViewOrginal" />

    <TextView
        android:id="@+id/textViewValsts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:text="Valsts"
        app:layout_constraintStart_toStartOf="@+id/textViewNosaukums"
        app:layout_constraintTop_toBottomOf="@+id/textViewNosaukums" />

    <TextView
        android:id="@+id/textViewTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Tips"
        app:layout_constraintBottom_toTopOf="@+id/textViewApraksts"
        app:layout_constraintStart_toStartOf="@+id/textViewValsts" />

    <TextView
        android:id="@+id/textViewApraksts"
        android:layout_width="0dp"
        android:layout_height="133dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        android:text="Apraksts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tips2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Auga nosaukums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewNosaukums" />

</androidx.constraintlayout.widget.ConstraintLayout>
